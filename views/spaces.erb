<!-- views/spaces.erb -->

<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/style.css">
  </head>
  <body>
    <header id="header">
      <a href="/">PersimmonBnB</a>
      <div  id="header-links">
        <a href="/">Home</a>
        <a href="/newspace">List a Space</a>
      </div>
    </header>

    <div id="tagline-div">
      <h1 id="tagline">Book a Space.</h1>
    </div>

    <div id="tagline-div">
      <% if session[:user_id] != nil %>
        <h2>Welcome, <%= session[:user_name] %>.</h2>
      <% end %>
    </div>

    <div id="homepage-and-form-container">
      <div id="available-spaces-container">
        <% @spaces.each do |space| %>
          <div>
              <p><%= space.space_name %>: <%= space.space_description %> - Â£<%= space.space_price %></p>
          </div>
        <% end %>
      </div>

      <form class="form" method="GET" action="/filter">
        <h1 id="sign-up-title">Book a Space</h1>
        <div class="signup-form">
            <div class="label-and-input-container">
              <label>Start Date:</label>   
              <input class="signup-input" type="date" placeholder="Enter start date" name="start_date" required />  
            </div>
            <div class="label-and-input-container">
              <label>End Date:</label>   
              <input class="signup-input" type="date" placeholder="Enter end date" name="end_date" required />  
            </div>
            <button class="signup-button" type="submit">Filter Spaces</button>
        </div>
     </div>
  </body>
</html>

