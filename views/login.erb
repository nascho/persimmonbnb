<!-- views/login.erb -->

<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/style.css">
  </head>
  <body>
      <header id="header">
        <a href="/">PersimmonBnB</a>
        <div  id="header-links">
          <a href="/">Home</a>
          <a href="/spaces">Spaces</a>
          <a href="/newspace">List a new Space</a>
        </div>
    </header>

    <div id="tagline-div">
      <h1 id="tagline">User Log-In</h1>
    </div>

    <div id="homepage-and-form-container">
      <div id="homepage-img-container">
      <img src="/img/house-with-view.jpg" alt="Home in the woods" id="login-img">
    </div>
  
      <form class="form" method="POST" action="/login">
      <h2 id="sign-up-title">Log-In:</h2>
        <div class="signup-form">
          <div class="label-and-input-container">
            <label>Email:</label>   
            <input class="signup-input" type="text" placeholder="Enter email" name="email" required />
          <div class="label-and-input-container">
            <label>Password:</label>   
            <input class="signup-input" type="password" placeholder="Enter password" name="password" required />  
          </div>
          <button class="signup-button" type="submit">Log-In</button> 
        </div>   
    </form>
  </body>
</html>
