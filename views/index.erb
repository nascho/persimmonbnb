<!-- views/index.erb -->

<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/style.css">
  </head>
  <body>
    <header id="header">
    <% if session[:user_id] != nil %>

      <a href="/">PersimmonBnB</a>
      <div  id="header-links">
        <a href="/spaces">Spaces</a>
        <a href="/newspace">List a Space</a>
      </div>
    </header>
   
    <div id="tagline-div">
      <h1 id="tagline">Feel at home, anywhere.</h1>
    </div>

    <div id="tagline-div">
        <h2> Welcome, <%= session[:user_name] %>.</h2>
    </div>
     
    <div id="homepage-img-container">
      <img src="/img/bnbimage.jpg" alt="Home in the woods" id="homepage-img">
    </div>

    <% end %>
    <% if session[:user_id] == nil %>

      <a href="/">PersimmonBnB</a>
      <div  id="header-links">
        <a href="/signup">Sign Up</a>
        <a href="/login">Log In</a>
        <a href="/spaces">Spaces</a>
        <a href="/newspace">List a Space</a>
      </div>
    </header>
   
    <div id="tagline-div">
      <h1 id="tagline">Feel at home, anywhere.</h1>
    </div>
     
    <div id="homepage-img-container">
      <img src="/img/bnbimage.jpg" alt="Home in the woods" id="homepage-img">
    </div>


    <% end %>
  </body>
</html>